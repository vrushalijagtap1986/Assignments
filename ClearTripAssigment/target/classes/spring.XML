<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="test.java"/>
    <bean id="CommonPage" class="pageObject.CommonPageObject">
        <constructor-arg value="Welcome" type="String"></constructor-arg>
    </bean>
    <bean id="OneRoundWay" class="pageObject.One_RoundWayTripPageObject">
        <constructor-arg value="Hello" type="String"></constructor-arg>
    </bean>
    <bean id="MultiCity" class="pageObject.MultiCityPageObject">
        <constructor-arg value="Hello" type="String"></constructor-arg>
    </bean>

</beans>